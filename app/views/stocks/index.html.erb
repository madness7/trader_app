<h1>Live Stock Index</h1>

<%= search_form_for @q do |f| %>
  <p>
    <%= f.label "Search by Stock Name" %>
    <%= f.text_field :name_cont %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>
<p><%= paginate @stocks %></p>
<table>
  <tr>
    <td>Name</td>
    <td>Symbol</td>
    <td>Current Price</td>
    <td>Purchase</td>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.name %></td>
    <td><%= stock.symbol %></td>
    <td><%= stock.current_price %></td>
    <td><%= link_to 'Buy', new_portstock_path(symbol: stock.symbol, stock_id: stock.id) %></td>
  </tr>
<% end %>
</table>
<p><%= paginate @stocks %></p>

<br />

<%= link_to 'Back to Portfolios', portfolios_path %>
