<h1>Listing stocks</h1>


<table>
  <tr>
    <th>Name</th>
    <th>Symbol</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @stocks.each do |stock| %>
  <tr>
    <td><%= stock.name %></td>
    <td><%= stock.symbol %></td>
    <td><%= stock.price %></td>
    <td><%#= link_to 'Open', stock %></td>
    <td><%#= link_to 'Edit', edit_stock_path(stock) %></td>
    <td><%= link_to 'Delete', stock, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>
